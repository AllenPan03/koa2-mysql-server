{
    "apps": {
        "name": "node.activity",
        "script": "./index.js",
        "watch": true,
        "ignore_watch": [
            "node_modules",
            "*.log",
            "app/data",
            "_build",
            "dist",
            "output"
        ],
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "err.log",
        "out_file": "out.log",
        "combine_logs": true,
        "merge_logs": true,
        "max_restarts": 3000,
        "instances": "max",
        "exec_mode": "cluster",
        "kill_timeout": "5000",
        "listen_timeout": "3000",
        "env": {
            "NODE_ENV": "dev",
            "interface": "http://localhost:3000"
        },
        "env_prd": {
            "NODE_ENV": "prd",
            "interface": "http://activity.jinlins.com"
        }
    }
}